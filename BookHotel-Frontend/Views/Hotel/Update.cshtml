@model HotelUpdateDTO

<form asp-action="Update" enctype="multipart/form-data">
    <br />
    <div class="container border p-4 rounded shadow-sm">
        <h2 class="text-secondary mb-4">Update Hotel</h2>

        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="row">
            <!-- Left: Form Fields (10 columns) -->
            <div class="col-md-10">
                <div class="mb-3 row">
                    <label asp-for="Name" class="col-sm-3 col-form-label fw-semibold">Hotel Name</label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Location" class="col-sm-3 col-form-label fw-semibold">Location</label>
                    <div class="col-sm-9">
                        <input asp-for="Location" class="form-control" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="ImageUrl" class="col-sm-3 col-form-label fw-semibold">Image URL</label>
                    <div class="col-sm-9">
                        <input asp-for="ImageUrl" class="form-control" hidden/>
                        <input asp-for="Image" class="form-control" />
                        <input asp-for="ImageLocalPath" class="form-control" hidden />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="NumberOfRooms" class="col-sm-3 col-form-label fw-semibold">Rooms</label>
                    <div class="col-sm-9">
                        <input asp-for="NumberOfRooms" class="form-control" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Price" class="col-sm-3 col-form-label fw-semibold">Price</label>
                    <div class="col-sm-9">
                        <input asp-for="Price" class="form-control" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Occupancy" class="col-sm-3 col-form-label fw-semibold">Occupancy</label>
                    <div class="col-sm-9">
                        <input asp-for="Occupancy" class="form-control" />
                    </div>
                </div>

                <div class="mb-4 row">
                    <label asp-for="ContactNumber" class="col-sm-3 col-form-label fw-semibold">Contact</label>
                    <div class="col-sm-9">
                        <input asp-for="ContactNumber" class="form-control" />
                    </div>
                </div>

                <!-- Buttons -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <a asp-action="Index" asp-controller="Hotel" class="btn btn-outline-primary w-100">Back to List</a>
                    </div>
                    <div class="col-md-6">
                        <input type="submit" value="Update" class="btn btn-primary w-100" />
                    </div>
                </div>
            </div>

            <!-- Right: Image (2 columns) -->
            <div class="col-md-2 text-end">
                <img src="@Model.ImageUrl" alt="Hotel Image" class="img-fluid rounded shadow-sm mb-3" style="max-height: 250px;" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
