@model HotelNoUpdateVM

<form asp-action="Update">

    <input hidden asp-for="hotelNoUpdateDTO.HotelNumber"/>
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Hotel</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="hotelNoUpdateDTO.HotelNumber" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="hotelNoUpdateDTO.HotelNumber" class="form-control" />
                <span asp-validation-for="hotelNoUpdateDTO.HotelNumber" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="hotelNoUpdateDTO.HotelID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="hotelNoUpdateDTO.HotelID" class="form-select" asp-items="@Model.HotelLists">
                    <option disabled selected>--Select Hotel--</option>
                </select>
                <span asp-validation-for="hotelNoUpdateDTO.HotelID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="hotelNoUpdateDTO.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="hotelNoUpdateDTO.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="hotelNoUpdateDTO.SpecialDetails" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="HotelNo" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}